FROM node:20-alpine AS base

WORKDIR /app

COPY backend/package*.json ./

FROM base AS development

RUN npm ci

COPY backend/ ./

EXPOSE 4000

CMD ["npm", "run", "dev"]

FROM base AS builder

RUN npm ci

COPY backend/ ./

RUN npm run build

FROM node:20-alpine AS production

WORKDIR /app

COPY backend/package*.json ./

RUN npm ci --only=production

COPY --from=builder /app/dist ./dist

EXPOSE 4000

CMD ["npm", "start"]
